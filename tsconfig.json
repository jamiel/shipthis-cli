{
  "compilerOptions": {
    "declaration": true,
    "module": "Node16",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "node16",
    "jsx": "react-jsx",
    "paths": {
      "@cli/api": ["./src/api/index.ts"],
      "@cli/apple": ["./src/apple/index.ts"],
      "@cli/baseCommands": ["./src/baseCommands/index.ts"],
      "@cli/components": ["./src/components/index.tsx"],
      "@cli/config": ["./src/config.ts"],
      "@cli/types": ["./src/types.d.ts"],
      "@cli/utils": ["./src/utils/index.ts"]
    }
  },
  "include": ["./src/**/*", "./tsconfig.json"],

  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
